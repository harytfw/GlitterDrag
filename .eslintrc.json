{
    "root": true,
    "parserOptions": {
        "ecmaVersion": 8
    },
    "env": {
        "browser": true,
        "es6": true,
        "webextensions": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "globals": {
        "commons": false,
        "getI18nMessage": false,
        "checkDragTargetType": false,
        "DEFAULT_CONFIG":false,
        "eventUtil":false,
        "typeUtil":false,
        "$E":false,
        "$A":false,
        "$H":false
    },
    "rules": {
        "no-console": 0,
        "no-const-assign": "warn",
        "no-this-before-super": "warn",
        "no-undef": "warn",
        "no-unreachable": "warn",
        "constructor-super": "warn",
        "valid-typeof": "warn",
        "arrow-spacing": ["warn"],
        "no-unused-vars": ["warn", { "vars": "all", "args": "all" } ],
        "no-proto": ["error"],
        "prefer-arrow-callback": ["warn"],
        "prefer-spread": ["warn"]
     }
}